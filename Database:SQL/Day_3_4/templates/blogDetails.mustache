    <head>
        <link rel="stylesheet" href="/styles.css">
    </head>

    <body>
         <nav>
            <a href="/blog/post-blog">Post a blog</a>
            <form method="POST" action="/index/logout">
                <button>Logout</button>
            </form>
        <nav>
        
        <h2>Title: {{title}}</h3></a>
        <p>{{body}}</p>  
        <p><b>Created Date: </b> {{date_created}}</p>
