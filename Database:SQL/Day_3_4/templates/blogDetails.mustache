        </form>
        <div id="commentsDisplay"></div>
        <form id='commentTextbox'>
            <input type='hidden' id="idTextBox" value={{post_id}} name="postId" />
            <input type='text' id="commentBody" placeholder="Leave a comment.." />
            <button>Comment</button>
        </form>
        <script src="/async.js"></script>
    </body>

